{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "SuayLang",
  "scopeName": "source.suay",
  "patterns": [
    { "include": "#comment" },
    { "include": "#string" },
    { "include": "#number" },
    { "include": "#constants" },
    { "include": "#operators" },
    { "include": "#punctuation" },
    { "include": "#ident" }
  ],
  "repository": {
    "comment": {
      "patterns": [
        {
          "name": "comment.line.suay",
          "match": "⍝.*$"
        }
      ]
    },
    "string": {
      "patterns": [
        {
          "name": "string.quoted.double.suay",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.suay",
              "match": "\\\\(n|t|\\\\|\")"
            }
          ]
        }
      ]
    },
    "number": {
      "patterns": [
        {
          "name": "constant.numeric.float.suay",
          "match": "(?<![\\w_])\\d+\\.\\d+(?![\\w_])"
        },
        {
          "name": "constant.numeric.integer.suay",
          "match": "(?<![\\w_])\\d+(?![\\w_])"
        }
      ]
    },
    "constants": {
      "patterns": [
        { "name": "constant.language.suay", "match": "[ø⊤⊥]" }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.suay",
          "match": "(←|⇐|↦|⇒|▷|⟲|↩|↯|•|⋯|⌁|·|¬|⊞|×|÷|%|\\+|−|-|\\*|/|=|≠|≤|≥|<|>|∧|∨)"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        { "name": "punctuation.section.parens.suay", "match": "[()]" },
        { "name": "punctuation.section.brackets.suay", "match": "[\\[\\]]" },
        { "name": "punctuation.section.block.suay", "match": "(⟪|⟫|⟦|⟧)" },
        { "name": "punctuation.separator.comma.suay", "match": "," }
      ]
    },
    "ident": {
      "patterns": [
        {
          "name": "variable.other.suay",
          "match": "[_A-Za-z][\\w_]*"
        }
      ]
    }
  }
}
